    <script>
        let selectedBid = null;

        function selectBid(bidType) {
            // Remove previous selection
            document.querySelectorAll('.bid-card').forEach(card => {
                card.classList.remove('selected');
            });

            // Add selection to clicked card
            event.currentTarget.classList.add('selected');
            selectedBid = bidType;

            // Store selection in localStorage
            localStorage.setItem('selectedCaptcha', bidType);

            // Activate demo link
            document.getElementById('demoLink').classList.add('active');
        }

        // Check if there's a stored selection
        window.addEventListener('load', () => {
            const stored = localStorage.getItem('selectedCaptcha');
            if (stored) {
                const cards = document.querySelectorAll('.bid-card');
                cards.forEach(card => {
                    if (card.getAttribute('onclick').includes(stored)) {
                        card.classList.add('selected');
                        selectedBid = stored;
                        document.getElementById('demoLink').classList.add('active');
                    }
                });
            }
        });
    </script>
